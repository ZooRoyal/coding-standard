{
  "name": "zooroyal/coding-standard",
  "description": "This is the ZooRoyal coding standard.",
  "type": "phpcodesniffer-standard",
  "keywords": [
    "ZooRoyal",
    "phpcs",
    "standards",
    "phpmd",
    "phpcpd",
    "lint"
  ],
  "homepage": "https://github.com/ZooRoyal/coding-standard",
  "license": "BSD-3-Clause",
  "authors": [
    {
      "name": "Sebastian Knott",
      "email": "s.knott@zooroyal.de"
    }
  ],
  "support": {
    "issues": "https://github.com/ZooRoyal/coding-standard/issues",
    "wiki": "https://github.com/ZooRoyal/coding-standard/wiki",
    "source": "https://github.com/ZooRoyal/coding-standard"
  },
  "require": {
    "php": "^7.4",
    "squizlabs/php_codesniffer": "^3.4",
    "sebastian/phpcpd": "^3.0.1 || ^4.1 || ^6.0.2",
    "phpmd/phpmd": "^2.9.1",
    "jakub-onderka/php-parallel-lint": "^0.9.2",
    "jakub-onderka/php-console-highlighter": "^0.3.2",
    "composer/composer": "^1.0 || ^2.0",
    "composer-plugin-api": "^1.0 || ^2.0",
    "symfony/process": "^3.4 || ^4.2 || ^5.0",
    "symfony/console": "^3.4 || ^4.2 || ^5.0",
    "symfony/finder": "^3.4 || ^4.2 || ^5.0",
    "php-di/php-di": "^5.4.0 || ^6.0",
    "doctrine/annotations": "^1.10",
    "dealerdirect/phpcodesniffer-composer-installer": "^0.7",
    "slevomat/coding-standard": "^6.4.1",
    "phpcompatibility/php-compatibility": "^9.1",
    "knplabs/github-api": "^2.11",
    "guzzlehttp/psr7": "^1.4",
    "phpstan/phpstan": "^0.12.44",
    "phpstan/phpstan-phpunit": "^0.12.16",
    "phpstan/phpstan-mockery": "^0.12.7",
    "php-parallel-lint/php-parallel-lint": "^1.2",
    "php-parallel-lint/php-console-highlighter": "^0.5",
    "composer/package-versions-deprecated": "^1.8"
  },
  "require-dev": {
    "ext-json": "*",
    "roave/security-advisories": "dev-master",
    "phpunit/phpunit": "^9.0",
    "phpunit/php-file-iterator": "^2.0.2 || ^3.0",
    "mockery/mockery": "^1.3.2",
    "symfony/filesystem": "^3.4 || ^4.2 || ^5.0",
    "sebastianknott/hamcrest-object-accessor": "^1.0.2 || ^2.0",
    "php-http/mock-client": "^1.3",
    "infection/infection": "^0.20.1"
  },
  "autoload": {
    "psr-4": {
      "Zooroyal\\CodingStandard\\": "src/main/php/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Zooroyal\\CodingStandard\\Tests\\": "tests/"
    }
  },
  "bin": [
    "src/bin/coding-standard",
    "src/bin/github"
  ],
  "scripts": {
    "post-update-cmd": "npm install",
    "post-install-cmd": "npm install"
  },
  "config": {
    "optimize-autoloader": true
  }
}
