{
  "name": "zooroyal/coding-standard",
  "description": "This is the ZooRoyal coding standard.",
  "type": "phpcodesniffer-standard",
  "keywords": [
    "ZooRoyal",
    "phpcs",
    "standards",
    "phpmd",
    "phpcpd",
    "lint"
  ],
  "homepage": "https://github.com/ZooRoyal/coding-standard",
  "license": "BSD-3-Clause",
  "authors": [
    {
      "name": "Sebastian Knott",
      "email": "sebastian.knott@rewe-digital.com"
    }
  ],
  "support": {
    "issues": "https://github.com/ZooRoyal/coding-standard/issues",
    "wiki": "https://github.com/ZooRoyal/coding-standard/wiki",
    "source": "https://github.com/ZooRoyal/coding-standard"
  },
  "require": {
    "php": "^8.1.0",
    "ext-json": "*",
    "ext-xml": "*",
    "composer/package-versions-deprecated": "^1.11.99.5",
    "composer-runtime-api": "^2.0",
    "dealerdirect/phpcodesniffer-composer-installer": "^1.0.0",
    "mindplay/composer-locator": "^2.1.4",
    "php-di/php-di": "^7.0.1",
    "php-parallel-lint/php-console-highlighter": "^1.0.0",
    "php-parallel-lint/php-parallel-lint": "^1.3.2",
    "phpcompatibility/php-compatibility": "^9.3",
    "phpmd/phpmd": "^2.13.0",
    "phpstan/extension-installer": "^1.2",
    "phpstan/phpstan": "^1.9.12",
    "phpstan/phpstan-doctrine": "^1.3.32",
    "phpstan/phpstan-mockery": "^1.1.0",
    "phpstan/phpstan-phpunit": "^1.3.3",
    "phpstan/phpstan-symfony": "^1.2.20",
    "sebastian/phpcpd": "^6.0.3",
    "slevomat/coding-standard": "^8.8.0",
    "squizlabs/php_codesniffer": "^3.7.1",
    "symfony/console": "~4.4.34 || ^5.4 || ^6.2.3",
    "symfony/event-dispatcher": "~4.4.34 || ^5.4 || ^6.2.2",
    "symfony/filesystem": "~4.4.27 || ^5.4 || ^6.2.0",
    "symfony/process": "~4.4.34 || ^5.4 || ^6.2.0",
    "thecodingmachine/phpstan-safe-rule": "^1.2.0",
    "thecodingmachine/safe": "^2.4.0",
    "webmozart/path-util": "^2.3"
  },
  "require-dev": {
    "amphp/amp": "^2.6.2",
    "amphp/phpunit-util": "^2.0.0",
    "amphp/process": "^1.1.4",
    "brianium/paratest": "^6.8.1",
    "infection/infection": ">=0.26.16",
    "mockery/mockery": "^1.5.1",
    "phpunit/phpunit": "^9.5.28",
    "roave/security-advisories": "dev-master",
    "sebastianknott/hamcrest-object-accessor": "^3.0.0"
  },
  "autoload": {
    "psr-4": {
      "Zooroyal\\CodingStandard\\": "src/main/php/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Zooroyal\\CodingStandard\\Tests\\": "tests/"
    },
    "files": [
      "vendor/squizlabs/php_codesniffer/autoload.php",
      "vendor/squizlabs/php_codesniffer/src/Util/Tokens.php",
      "vendor/squizlabs/php_codesniffer/src/Sniffs/Sniff.php",
      "vendor/slevomat/coding-standard/autoload-bootstrap.php"
    ]
  },
  "bin": [
    "src/bin/coding-standard"
  ],
  "scripts": {
    "post-update-cmd": "npm update",
    "post-install-cmd": "npm install",
    "test": [
      "mkdir -p tmp/phpunit",
      "paratest -p$(getconf _NPROCESSORS_ONLN)"
    ],
    "infection": [
      "@test",
      "infection -n --threads=$(getconf _NPROCESSORS_ONLN) --only-covered --skip-initial-tests --coverage=tmp/phpunit --no-progress"
    ]
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true,
    "process-timeout": 600,
    "allow-plugins": {
      "phpstan/extension-installer": true,
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "infection/extension-installer": true,
      "mindplay/composer-locator": true
    }
  }
}
